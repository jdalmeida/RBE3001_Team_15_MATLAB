function LivePlot3D(q)
    q0 = q(1); q1 = q(2); q2 = q(3);
    L1 = 135; L2 = 175; L3 = 169.28; 
    
    T01 = DHSolver(0, -90, L1, q0);
    T12 = DHSolver(L2, 0, 0, q1);
    T23 = DHSolver(L3, 0, 0, q2);

    T02 = T01 * T12;
    T03 = T02 * T23;
    
    z = zeros(3, 1, 'single');
    p01 = T01(1:3,4);
    p12 = T12(1:3,4);
    p23 = T23(1:3,4);
    
    framePos = [z p01 p12 p23];
%% Initialize the figure
%     figure()
%     hold on
%     axis equal;
    
%     plot3([0; p01(1); p12(1); p23(1)], [0; p01(2); p12(2); p23(2)], [0; p01(3); p12(3); p23(3)]);
    plot3(framePos(1,:), framePos(2,:), framePos(3,:),'MarkerSize',3,'Marker','diamond','LineWidth',1.5);

    % Create xlabel
    xlabel('X');

    % Create zlabel
    zlabel('Z');

    % Create ylabel
    ylabel('Y');
    
    xlim(axes1,[0 200]);
    ylim(axes1,[-200 200]);
    zlim(axes1,[0 200]);
    view(axes1,[-156.7 8.40000000000001]);
    box(axes1,'on');
    grid(axes1,'on');
    
    set(axes1,'Color',[0.941176474094391 0.941176474094391 0.941176474094391]);

end

